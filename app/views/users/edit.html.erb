<div class="container" >
<div class="row" >
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h1>User info</h1>
 
 <%= form_with model: @user, local:true do |f| %>
 
  
<h4>Name<h4>
 <%= f.text_field :name %>
 
<h4>Image</h4>
 <%= f.file_field :profile_image, accept: "profile_image/*" %>

<h4>Introduction<h4>
<%= f.text_area :introduction %>

<div><%= f.submit 'Update User' %></div>



<% end %>

</div>
</div>
</div>