


<h2>User info</h2>

  
    <%= image_tag user.get_profile_image %>

<table class="table">
  <tr>
   <th>name</th>
   <th><%= user.name %></th>
  </tr>

  <tr>
   <th>introduction</th>
   <th><%= user.introduction %></th>
  <tr>

</table>


<div><%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %><i class="fa-solid fas fa-user-cog"></i><% end %></div>

 

<h2>New book</h2>

 <%= form_with model: book, url: books_path, local:true, method: :post do |f| %>
   <h6>Title</h6>
     <%= f.text_field :title %>

   <h6>Opinion</h6>
       <%= f.text_area :body %>
     </br>
       <%= f.submit 'Create Book' ,class: "btn btn-success"%>


 <% end %>





